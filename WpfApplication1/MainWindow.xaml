<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        mc:Ignorable="d"
        Title="Trainingsessie" Height="350" Width="525">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="226*"/>
            <RowDefinition Height="226*"/>
        </Grid.RowDefinitions>
 
            <TabControl>
                <TabItem Header="Training">
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" Width="500" TextWrapping="Wrap">
                        Welkom in de trainingssessie. In deze module krijg je de mogelijkheid om vertrouwt te geraken met de geluiden die ter berschikking zijn.
                    </TextBlock>

                </TabItem>
                <TabItem Header="Learning" />

                <TabItem Header="Exam" />
            </TabControl>
        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Center">
            <Button x:Name="start" Content="START" Click="Button_Start" Width="500" Height="30"/>
        </StackPanel>

    </Grid>
    
</Window>
